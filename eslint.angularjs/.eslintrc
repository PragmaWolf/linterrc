{
    "extends": [
        "google",
        "angular"
    ],
    "env": {
        "browser": true,
        "es6": true,
        "jquery": true,
        "shared-node-browser": true,
        "worker": true,
        "meteor": true,
        "mocha": true
    },
    "plugins": [
        "tdd",
        "angular"
    ],
    "globals": {
        "Velocity": true,
        "Chart": true,
        "legend": true,
        "ChartColors": true
    },
    "rules": {
        "indent": [
            "error",
            4,
            {
                "SwitchCase": 1
            }
        ],
        "no-implicit-coercion": [
            "error",
            {
                "boolean": false,
                "number": false,
                "string": false
            }
        ],
        "space-before-function-paren": [
            "error",
            "never"
        ],
        "valid-jsdoc": [
            "error",
            {
                "requireReturn": false
            }
        ],
        "require-jsdoc": [
            "warn"
        ],
        "max-len": [
            "error",
            120,
            4,
            {
                "ignoreComments": true,
                "ignoreUrls": true,
                "ignoreTrailingComments": true
            }
        ],
        "guard-for-in": [
            "error"
        ],
        "no-trailing-spaces": [
            "warn"
        ],
        "quotes": [
            "error",
            "single",
            {
                "allowTemplateLiterals": true
            }
        ],
        "new-cap": [
            "error"
        ],
        "key-spacing": [
            "error",
            {
                "mode": "minimum"
            }
        ],
        "generator-star-spacing": [
            "error",
            "before"
        ],
        "camelcase": [
            "error",
            {
                "properties": "always"
            }
        ],
        "tdd/assert-enforce-boolean": [
            "warn"
        ],
        "angular/no-service-method": [
            "off"
        ],
        "angular/di": [
            "error",
            "$inject"
        ],
        "angular/controller-as-vm": [
            "error",
            "self"
        ]
    }
}
